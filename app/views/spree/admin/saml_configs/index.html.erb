<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Spree.t('new_saml_config'), new_object_url, :icon => 'icon-plus', :id => 'admin_new_saml_config' %>
  </li>
<% end %>

<h1><%= Spree.t("social_authentication_saml") %></h1>

<p><%= Spree.t("only_one_saml") %><p>

<table class="index">
  <thead data-hook="admin_saml_config_index_headers">
    <th>Host</th>
    <th>Active</th>
    <th>Action</th>
  </thead> 
  <tbody>
    <% @saml_configs.each do |config|%>
      <tr id="<%= dom_id config %>" data-hook="admin_trackers_index_rows">
        <td><%= config.host %></td>
	<td><%= config.is_active ? Spree.t(:yes) : Spree.t(:no) %></td>
        <td>
          <%= link_to_edit config %> &nbsp;
          <%= link_to_delete config %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
